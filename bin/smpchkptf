#!/bin/sh

. zbrewfuncs
InvalidOption=1
TooFewParms=2
UnknownAction=3

#
# Temporary hack - replace with a proper message file
#
msg() {
	pgm=$1
	msgnum=$2
	msgtype=$3
	
	shift 3
	args=$*

	case ${msgnum} in 
		${InvalidOption}) msgtext="Invalid option specified: -";;
		${TooFewParms}) msgtext="Too few Parameters specified. Expected 2 but received: ";;
		${UnknownAction}) msgtext="Unknown action specified: ";;
		*) msgtext="Internal Error. Unknow msgnum: ${msgnum}";;
	esac
	echo "ZCL000"${msgnum}${msgtype} "${msgtext}${args}" >&2
}

#
# Temporary hack - replace with a manpage
#
syntax() {
	echo "\
smpchkptf [-vd] <csi> <ptf list>
	    
Examples:
	smpchkptf zbrew.igy630g.global.csi HADB630 JADB63H JADB631 JADB632 <-- Perform SMP/APPLY on previously RECEIVEed product IGY630
" >&2 
	exit 16
}

runchk() {
	csi="$1"
	shift
	fmid_check="$1"
	shift
	requiredptfs=$*

	missingptfs=''

	all=${TMP}/$$.all.ptfs
	touch ${all}
	required=${TMP}/$$.required.ptfs
	touch ${required}
	missing=${TMP}/$$.missing.ptfs
	touch ${missing}

	tmpCntlHFS=${TMP}/$$.cntl.xml
	echo "  SET BOUNDARY(GLOBAL).
  LIST GZONE.
" >${tmpCntlHFS}
	gzonelist=${TMP}/$$.smp.gzonelst
	smpout=`smp -i ${csi} -l ${gzonelist} <${tmpCntlHFS}`
	rc=$?
 	if [ ${rc} -gt 0 ]; then
                echo "Unable to determine global zone for: ${csi}." >&2
		echo "${smpout}" >&2
		return ${rc}
       	fi
	tgtzones=`awk '{ if ($2=="TARGET" && NF==3) { print($1); } }' < ${gzonelist}`
        rm ${tmpCntlHFS}
	if [ "${tgtzones}" = '' ]; then
		echo "Internal error. Unable to	determine global zone for: ${csi}. See ${gzonelist} for details." >&2
		return 16
	fi
	ptflist=${TMP}/$$.smp.ptflst
	for tgtzone in $tgtzones; do
		if [ ${verbose} -gt 0 ]; then
			echo "Checking target zone: ${tgtzone}" >&2
		fi
		echo "  SET BOUNDARY(${tgtzone})." >${tmpCntlHFS}
		echo "  LIST SYSMODS(" >>${tmpCntlHFS}
		for ptfs in ${requiredptfs}; do
			echo "               ${ptfs}" >>${tmpCntlHFS}
		done
  		echo "  )." >>${tmpCntlHFS}

		smpout=`smp -i ${csi} -l ${ptflist} <${tmpCntlHFS}`
		rc=$?
		if [ ${rc} -gt 4 ]; then
			echo "Warning: Unable to determine PTF list for target zone ${tgtzone}." >&2
		else
			if [ "${fmid_check}" = 'n' ]; then
				allptfs=`awk '{ if ($2=="TYPE" && $3=="=" && ($4=="PTF" || $4=="SUPERSEDED") && NF==4) { print($1); } }' < ${ptflist}`
			else
				allptfs=`awk '{ if ($2=="TYPE" && $3=="=" && $4=="FUNCTION" && NF==4) { print($1); } }' < ${ptflist}`
			fi
			if [ "${allptfs}" = '' ]; then
				missingptfs="${requiredptfs}"
				if [ ${verbose} -gt 0 ]; then
					echo "No PTFs in target zone: ${tgtzone}" >&2
				fi
			else
				missing_ptfs='n'
				for rptf in ${requiredptfs}; do
					found='n'
					for ptf in ${allptfs}; do
						if [ "${ptf}" = "${rptf}" ]; then
							found='y'
							if [ ${verbose} -gt 0 ]; then
								echo "PTF ${rptf} found" >&2
							fi
						fi 
					done
					if [ "${found}" = 'n' ]; then
						missing_ptfs='y'
						if [ ${verbose} -gt 0 ]; then
							echo "PTF ${rptf} not found" >&2
						fi
						echo "${rptf}" >>${missing}
						missingptfs="${missingptfs} ${rptf}"
					fi
				done
				for ptf in ${allptfs}; do
					echo "${ptf}" >>${all}
				done
				for ptf in ${requiredptfs}; do
					echo "${ptf}" >>${required}
				done
				if [ "${missing_ptfs}" = 'n' ]; then
					return 0
				fi
			fi
		fi
	done
	if [ "${fmid_check}" = 'n' ]; then
		echo "One or more PTFs required have not been applied to any of the target zones:" >&2
		echo "${tgtzones}" >&2
		echo "The required PTFs list is: ${requiredptfs}" >&2
		echo "The missing PTFs are: ${missingptfs}" >&2
		return 16
	else
		echo "FMID ${requiredptfs} not found to be installed. Verify global.parameters for correct CSI if you suspect this is an error"
		return 17
	fi
}  

debug=0
verbose=0
opts=""
while getopts ":vd" opt; do
  case ${opt} in
    d )
      debug=1
      opts="${opts} -d"
      ;;
    v )
      verbose=1
      opts="${opts} -v"
      ;;
    \?)
      if [ ${OPTARG} != "?" ]; then
	msg zbrew ${InvalidOption} E "${OPTARG}"
      fi
      syntax
      exit 4
      ;;
  esac
done
shift $(expr $OPTIND - 1 )
if [ $# -lt 2 ]; then
	msg zbrew ${TooFewParms} E "$#"
	syntax
	exit 16
fi

mydir=$(callerdir ${0})
props="${mydir}/../properties/zbrew.properties"
. zbrewprops "${props}"
if [ $? -gt 0 ]; then
        echo "Internal Error. Unable to find ${props}" >&2
	exit 4
fi   

if [ -z "${TMP}" ]; then
	if [ -d /tmp ]; then
		TMP=/tmp
	else
		echo "Unable to set TMP. Please export TMP before running"
		exit 16
	fi
fi

if [ -d $TMP ]; then
	;
else
	echo "TMP environment variable is defined to ${TMP} but the directory does not exist. Please create directory or change environment variable."
	exit 16
fi

out=$(whence zbrewfuncs >/dev/null)
if [ $? -eq 0 ]; then
	. zbrewfuncs
else
    	echo "zbrew tools need to be in your PATH"
	exit 4
fi

props=$(callerdir "$0")"/../../zbrew/global.properties"
. zbrewprops ${props}

out=`runchk $*`
rc=$?
if [ $rc -gt 0 ]; then
	echo ${out}
	exit $rc
fi
exit 0
